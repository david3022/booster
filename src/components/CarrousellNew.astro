---
import Retain from "../assets/retain1.png";
import Retain2 from "../assets/retain2.png";
import Retain3 from "../assets/retain3.png";
import Retain4 from "../assets/retain4.png";
import Retain5 from "../assets/retain5.png";
---

<style>
  @keyframes carouselFade {
    0%, 20% {
      opacity: 1;
      z-index: 1;
    }
    20.001%, 100% {
      opacity: 0;
      z-index: 0;
    }
  }

  .carousel-container {
    position: relative;
    width: 100%;
    height: 300px; /* Ajusta si necesitas m√°s alto */
    overflow: hidden;
  }

  .carousel-container img {
  @apply absolute top-0 left-0 w-full h-full object-contain rounded-lg transition-opacity duration-700;
  opacity: 0;
  animation: carouselFade 10s infinite;
}

 .carousel-container img:nth-child(1) {animation-delay: 0s; opacity: 1;}
  .carousel-container img:nth-child(2) { animation-delay: 2s; }
  .carousel-container img:nth-child(3) { animation-delay: 4s; }
  .carousel-container img:nth-child(4) { animation-delay: 6s; }
  .carousel-container img:nth-child(5) { animation-delay: 8s; }
</style>

<div class="container relative flex flex-col md:flex-row justify-between max-w-6xl px-10 mx-auto xl:px-0 mt-32 mb-16 gap-6 items-center">


  <!-- üìù Izquierda: texto -->
  <div class="md:w-1/2 w-full text-center md:text-left">
    <h2 class="text-3xl font-bold mb-4 text-indigo-600">Avoid this Issues</h2>
    <p class="text-gray-700 mb-6">
      We help you avoid <strong> the most common and costly startup mistakes </strong> ‚Äî blocked funds, poor returns, inventory gaps, weak brand positioning, and disconnected social communities. Launch smarter, grow faster.
    </p>
    <!-- <a href="#ver-mas" class="inline-block px-4 py-2 bg-indigo-500 text-white rounded hover:bg-indigo-600 transition">
      Explorar m√°s
    </a> -->
  </div>

  <!-- üñºÔ∏è Derecha: carrusel -->
  <div class="carousel-container md:w-1/2 w-full">
    <img src={Retain.src} alt="Image 1" />
    <img src={Retain2.src} alt="Image 2" />
    <img src={Retain3.src} alt="Image 3" />
    <img src={Retain4.src} alt="Image 4" />
    <img src={Retain5.src} alt="Image 5" />
  </div>
</div>
