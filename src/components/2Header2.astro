---
import Banner from "../assets/Untitled.webp";
import Socials from "../assets/socials.webp";

---


<iframe
  src="https://player.vimeo.com/video/1103032037?h=70cb31b2de&autoplay=1&muted=1&loop=1&controls=0&title=0&byline=0&portrait=0"
  class="bg-black h-[60vh] w-full object-cover rounded-md"
  allow="autoplay; fullscreen; picture-in-picture"
  allowfullscreen
  loading="lazy"
>
</iframe>

<section class="city min-h-screen flex items-center justify-center bg-white" id="ourmojo">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col lg:flex-row items-center justify-center gap-12">
      <!-- Text Content -->
      <div class="text-center lg:text-left max-w-lg">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">
          We turn followers into advocates
        </h1>
        <p class="mt-4 text-xl text-gray-500">
          Strategy meets creativity. Engagement becomes conversion. Make your social growth unstoppable
        </p>
        <!-- <a
          href="#"
          class="mt-8 inline-block rounded-md border border-transparent bg-indigo-600 py-3 px-8 text-center font-medium text-white hover:bg-indigo-700"
        >
          Svelte Signals
        </a> -->
      </div>

      <!-- Video Container -->
      <div class="w-full max-w-2xl aspect-video overflow-hidden rounded-lg">
        <img src={Socials.src} />
      </div>
    </div>
  </div>
</section>
